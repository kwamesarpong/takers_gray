<h1>Listing All Products Belonging to This Merchant</h1>
<table>
	<thead>
    <tr>
    <th>Merchant ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Buy</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.merchant_id %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><a href="#">BUY</a></td>
       
      </tr>
    <% end %>
  </tbody>

</table>