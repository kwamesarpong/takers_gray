<h1>Listing All Products</h1>
<table>
	<thead>
    <tr>
    <th>Item ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Buy</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @product.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to("BUY NOW", :controller => "purchases", :action => "new", :id => product.id) %></td>  <!--user_purchase(:user_id => ) -->
       
      </tr>
    <% end %>
    
  </tbody>

</table>

<p><%= will_paginate @product %></p> 